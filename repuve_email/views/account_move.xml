<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="account_move_form_inherit_repuve_email" model="ir.ui.view">
    <field name="name">account.move.form.inherit.repuve.email</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

      <xpath expr="//button[@name='button_draft']" position="before">
        <button name="send_repuve" class="btn-primary" string="Enviar a REPUVE" type="object" attrs="{'invisible': [('state', '!=', 'done')]}"/>
      </xpath>

    </field>
  </record>

</odoo>
