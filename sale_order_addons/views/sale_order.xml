<odoo>
  <data>
    
    <record id="sale_order_inherit_sale_order_addons_form" model="ir.ui.view">
      <field name="name">sale.order.inherit.sale.order.addons.form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <!-- Boton-->
        <xpath expr="//form//header//field[@name='state']" position="before">
          <button name="action_pay_register" type="object" string="Registrar pago" attrs="{'invisible' : [('importe_adeudado', '=', 0)]}"/>
        </xpath>
        <!-- Pagina en Notebook-->
        <xpath expr="//form//sheet//notebook//page[@name='customer_signature']" position="after">
          <page name="pay_quotation" string="Pagos">
            <field name="pays_order"/>
          </page>
        </xpath>

        <xpath expr="//field[@name='amount_total']" position="after">
            <field name="total_pagado"/>
        </xpath>

        <xpath expr="//field[@name='total_pagado']" position="after">
            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
              <field name="importe_adeudado" widget="monetary" class="oe_subtotal_footer_separator" />
            </div>
        </xpath>

      </field>
    </record>
    
  </data>
</odoo>