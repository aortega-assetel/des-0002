<odoo>
  <data>
    <record id="res_partner_inherit_contacts_module_form" model="ir.ui.view">
      <field name="name">res.partner.inherit.contacts.module.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='type']" position="before">
          <field name="first_name" attrs="{'invisible' : [('company_type', '!=', 'person')], 'required' : [('company_type', '==', 'person')]}"/>
          <field name="last_name_1" attrs="{'invisible' : [('company_type', '!=', 'person')], 'required' : [('company_type', '==', 'person')]}"/>
          <field name="last_name_2"/>
        </xpath>

      </field>
    </record>
  </data>
</odoo>