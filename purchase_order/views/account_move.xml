<odoo>
  <data>
    <record id="account_move_inherit_purchase_order_form" model="ir.ui.view">
      <field name="name">account.move.inherit.purchase.order.form</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">

        <xpath expr="//page[@name='other_info']//group[@name='sale_info_group']//field[@name='partner_bank_id']" position="after">
          <field name="purchase_order"/>
        </xpath>

      </field>
    </record>
  </data>
</odoo>