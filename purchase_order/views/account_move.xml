<odoo>
  <data>
    <record id="account_move_inherit_purchase_order_form" model="ir.ui.view">
      <field name="name">account.move.inherit.purchase.order.form</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">

        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='other_info']/group[1]/group[@name='sale_info_group']/field[@name='partner_bank_id']" position="after">
            <field name="purchase_order" attrs="{'invisible' : [('purchase_order', '&gt;', 0)]}"/>
        </xpath>

      </field>
    </record>
  </data>
</odoo>